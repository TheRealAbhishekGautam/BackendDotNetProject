@model List<Product>

    <div class="container">
        <div class="row pt-5 pb-3">
            <div class="col-6">
                <h1>
                    Product List
                </h1>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Products" asp-action="Upsert" class="btn btn-primary">
                    <i class="bi bi-plus-lg"></i> Add a new Product
                </a>
            </div>
        </div>
    </div>
    <table class=" table table-bordered table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>ISBN</th>
                <th>Price</th>
                <th>Author</th>
                <th>Catagory</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td> @obj.Title </td>
                    <td> @obj.ISBN </td>
                    <td> @obj.Price</td>
                    <td> @obj.Author </td>
                    <td> @obj.Catagory.Name</td>
                    <td>
                        <a asp-controller="Products" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-controller="Products" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill"></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>

    </table>
